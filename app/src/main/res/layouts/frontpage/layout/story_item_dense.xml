<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/rowBackgroundColor">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dense_row_horizontal_padding"
        android:layout_marginTop="@dimen/dense_row_vertical_padding"
        android:fontFamily="sans-serif"
        android:textColor="?attr/rowTextColorSecondary"
        android:textSize="@dimen/dense_title_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dense_text_item_separation"
        android:fontFamily="sans-serif"
        android:textColor="?attr/rowTextColorSecondary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/score"
        app:layout_constraintLeft_toRightOf="@id/score"
        tools:text="dhouston"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dense_row_horizontal_padding"
        android:layout_marginRight="@dimen/dense_row_horizontal_padding"
        android:textColor="?attr/rowTextColorPrimary"
        android:textSize="@dimen/dense_title_size"
        android:textStyle="bold"
        android:lineSpacingMultiplier="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score"
        tools:text="My YC app: Dropbox - Throw away your USB drive"/>

    <ImageView
        android:id="@+id/url_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dense_row_horizontal_padding"
        android:contentDescription="@string/url_link"
        android:src="@drawable/ic_link_light_grey_24dp"
        android:tint="?attr/rowDrawableColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dense_text_item_separation_small"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/rowTextColorSecondary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/url_drawable"
        app:layout_constraintLeft_toRightOf="@id/url_drawable"
        app:layout_constraintTop_toTopOf="@id/url_drawable"
        tools:text="(getdropbox.com)"/>

    <ImageView
        android:id="@+id/time_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dense_text_item_separation"
        android:contentDescription="@string/time_icon"
        android:padding="4dp"
        android:src="@drawable/ic_time_light_grey_24dp"
        android:tint="?attr/rowDrawableColor"
        app:layout_constraintBottom_toBottomOf="@id/url_drawable"
        app:layout_constraintLeft_toRightOf="@id/url"
        app:layout_constraintTop_toTopOf="@id/url_drawable"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dense_text_item_separation_small"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/rowTextColorSecondary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/url_drawable"
        app:layout_constraintLeft_toRightOf="@id/time_drawable"
        app:layout_constraintTop_toTopOf="@id/url_drawable"
        tools:text="1hr"/>

    <TextView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dense_row_horizontal_padding"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_comment_gold_24dp"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_comment_gold_24dp"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:textColor="?attr/colorPrimary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/url_drawable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/url_drawable"
        tools:text="72"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="@dimen/dense_row_vertical_padding"
        android:background="?attr/rowDividerColor"
        app:layout_constraintTop_toBottomOf="@id/url_drawable"/>
</android.support.constraint.ConstraintLayout>