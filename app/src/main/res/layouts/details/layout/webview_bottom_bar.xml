<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:id="@+id/webview_bottom_bar"
    android:orientation="horizontal"
    android:background="?attr/colorPrimary"
    android:visibility="invisible"
    android:weightSum="3">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/webview_bottom_bar_drawable_size"
        android:layout_height="@dimen/webview_bottom_bar_drawable_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/webview_bottom_bar_drawable_spacing"
        android:layout_marginRight="@dimen/webview_bottom_bar_drawable_spacing"
        android:layout_weight="1"
        android:src="@drawable/ic_arrow_back_white_24dp"/>

    <ImageView
        android:id="@+id/forwards_button"
        android:layout_width="@dimen/webview_bottom_bar_drawable_size"
        android:layout_height="@dimen/webview_bottom_bar_drawable_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/webview_bottom_bar_drawable_spacing"
        android:layout_marginRight="@dimen/webview_bottom_bar_drawable_spacing"
        android:layout_weight="1"
        android:src="@drawable/ic_arrow_forward_white_24dp"/>

    <ImageView
        android:id="@+id/open_in_browser"
        android:layout_width="@dimen/webview_bottom_bar_drawable_size"
        android:layout_height="@dimen/webview_bottom_bar_drawable_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/webview_bottom_bar_drawable_spacing"
        android:layout_marginRight="@dimen/webview_bottom_bar_drawable_spacing"
        android:layout_weight="1"
        android:src="@drawable/ic_open_in_browser_white_24dp"/>
</LinearLayout>